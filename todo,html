<header>오늘 뭐하니?</header>
<div class="toolbar">
  <span class="date" id="today-date"></span>
  <button class="pdf-btn" onclick="saveAsPDF()">PDF 다운로드</button>
</div>
<div class="main-container">
  <table id="todo-table">
    <thead>
      <tr>
        <th style="width:30%;">제목</th>
        <th style="width:55%;">내용</th>
        <th style="width:15%">삭제</th>
      </tr>
    </thead>
    <tbody></tbody>
  </table>
</div>

<!-- "+" floating 버튼 -->
<button class="add-btn" id="add-todo-btn" onclick="openEditPopup(-1)">＋</button>

<!-- 팝업(입력/수정/보기) -->
<div class="popup" id="popup">
  <div class="popup-header">
    <span id="popup-title">할일 추가</span>
    <button class="popup-close" onclick="closePopup()">×</button>
  </div>
  <div class="popup-body" id="popup-body">
    <!-- 동적으로 내용 채워짐 -->
  </div>
  <div class="popup-footer" id="popup-footer"></div>
</div>

<script>
  // 날짜 표시
  document.getElementById('today-date').innerText = new Date().toLocaleDateString('ko-KR', {
    year: 'numeric', month: 'long', day: 'numeric', weekday: 'long'
  });

  let todos = [];
  let editingIndex = -1;

  function getShort(text, limit) {
    return text.length > limit ? text.slice(0, limit) + '...' : text;
  }

  function renderTodos() {
    const tbody = document.querySelector('#todo-table tbody');
    tbody.innerHTML = '';
    todos.forEach((todo, idx) => {
      const tr = document.createElement('tr');
      // 제목
      const tdTitle = document.createElement('td');
      tdTitle.textContent = getShort(todo.title, 10);
      tdTitle.title = todo.title;
      tdTitle.className = 'title';
      tdTitle.onclick = () => openViewPopup(idx);

      // 내용(마크다운 파싱 안됨)
      const tdContent = document.createElement('td');
      tdContent.className = 'content';
      tdContent.textContent = getShort(todo.content.replace(/[#*_>\-\[\]!`]/g,""), 12);

      // 삭제버튼
      const tdDel = document.createElement('td');
      tdDel.className = 'action';
      const btn = document.createElement('button');
      btn.textContent = '-';
      btn.className = 'del-btn';
      btn.onclick = () => { deleteTodo(idx); };
      tdDel.appendChild(btn);

      tr.appendChild(tdTitle);
      tr.appendChild(tdContent);
      tr.appendChild(tdDel);
      tbody.appendChild(tr);
    });
  }

  function openEditPopup(idx) {
    editingIndex = idx;
    document.getElementById('popup-title').textContent = idx === -1 ? '할일 추가' : '할일 수정';
    document.getElementById('popup-body').innerHTML = `
      <input type="text" id="todo-title" placeholder="제목" maxlength="50" value="${(idx > -1 ? escapeHtml(todos[idx].title) : '')}"/>
      <textarea id="todo-content" placeholder="마크다운 형식 지원">${(idx > -1 ? escapeHtml(todos[idx].content) : '')}</textarea>
      <div class="markdown-tip">내용은 <b>마크다운 형식</b> 지원</div>
    `;
    document.getElementById('popup-footer').innerHTML = `
      <button class="act-btn" onclick="saveTodo()">${idx === -1 ? '추가' : '저장'}</button>
    `;
    showPopup();
    setTimeout(()=>document.getElementById('todo-title').focus(),80);
  }

  function openViewPopup(idx) {
    editingIndex = idx;
    document.getElementById('popup-title').textContent = '할일 상세';
    document.getElementById('popup-body').innerHTML = `
      <div class="popup-view-title">${escapeHtml(todos[idx].title)}</div>
      <div class="popup-view-content">${marked.parse(todos[idx].content)}</div>
    `;
    document.getElementById('popup-footer').innerHTML = `
      <button class="act-btn" onclick="openEditPopup(${idx})">수정</button>
    `;
    showPopup();
  }

  function closePopup() {
    document.getElementById('popup').style.display = 'none';
  }
  function showPopup() {
    document.getElementById('popup').style.display = 'block';
  }

  function saveTodo() {
    const title = document.getElementById('todo-title').value.trim();
    const content = document.getElementById('todo-content').value.trim();
    if(!title) { alert("제목을 입력하세요!"); document.getElementById('todo-title').focus(); return; }
    if(editingIndex === -1) {
      todos.push({title, content});
    } else {
      todos[editingIndex] = {title, content};
    }
    renderTodos();
    closePopup();
  }

  function deleteTodo(idx) {
    todos.splice(idx,1);
    renderTodos();
    closePopup();
  }

  function saveAsPDF() {
    const element = document.createElement('div');
    element.innerHTML = `<h1 style="color:#865dd8;">오늘 뭐하니?</h1>
    <h3 style="color:#6d46ab;">${document.getElementById('today-date').innerText}</h3>`
    + todos.map(todo =>
        `<div style="margin-bottom:1.4em;">
              <b style="color:#916be0;font-size:1.16em">${escapeHtml(todo.title)}</b>
              <div style="margin-top:0.2em;">${marked.parse(todo.content)}</div>
          </div>`
    ).join("<hr style='border:none;border-top:1px dashed #d1bdf7'>");

    html2pdf(element, {
      margin: 0.75,
      filename: '오늘_뭐하니.pdf',
      image: { type: 'jpeg', quality: 0.98 },
      html2canvas: { scale: 2 },
      jsPDF: { unit: 'in', format: 'a4', orientation: 'portrait' }
    });
  }

  function escapeHtml(str) {
    return (str||'').replace(/[&<>'"]/g,function(c){return {'&':'&amp;','<':'&lt;','>':'&gt;',"'":'&#39;','"':'&quot;'}[c]});
  }

  renderTodos();
</script>

</body>
</html>
